services:
  nebula-sync:
    image: ghcr.io/lovelaze/nebula-sync:latest
    container_name: nebula-sync
    restart: unless-stopped
    environment:
      - TZ={{ timezone | default('America/New_York') }}
      - PRIMARY=http://pihole:80|{{ pihole_admin_password }}
      - REPLICAS=http://{{ backup_pihole_ip }}:{{ pihole_web_port | default(8089) }}|{{ pihole_admin_password }}
      - FULL_SYNC=true
      - RUN_GRAVITY=true
      - CRON=0 */5 * * *
    networks:
      - pihole_network

networks:
  pihole_network:
    external: true
